<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.mit.packit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
	<uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
	
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".PackItActivity" 
            android:theme="@style/packItTheme">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenuActivity"
            android:theme="@style/packItTheme"></activity>
        <activity android:name=".SetTripInfoActivity"
            android:theme="@style/packItTheme"></activity>
        <activity android:name=".PackActivity"
            android:theme="@style/packItTheme"></activity>
         <activity android:name=".ItemActivity"
            android:theme="@style/packItTheme"></activity>
        <activity android:name=".SettingsActivity"
            android:theme="@style/packItTheme"></activity>
        <activity android:name=".TripInfoActivity"
            android:theme="@style/packItTheme"></activity>  
        <activity android:name=".SetTripActivity"
            		android:label="My Trip"></activity>
        <activity android:name=".TripActivity"></activity>
        <activity android:name=".PackingTip"></activity>
        <activity android:name=".Reminders"></activity>
        <activity android:name=".Weather"></activity>
        <activity android:name=".temp.ItemTempActivity"></activity>
    </application>

</manifest>