<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/destination_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Destination:"
        />
    
    <EditText
        android:id="@+id/destination_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_below="@id/destination_title"
        />
     <TextView 
        android:id="@+id/mode_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Mode of Transportation:"
        android:layout_below="@id/destination_field"
        />
	<LinearLayout
	    android:id="@+id/button_row"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/mode_label"
	    >
	    <Button
            android:id="@+id/walking_button"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/mode_walking"
            android:drawablePadding="0dp"
        />
        <Button
            android:id="@+id/car_button"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight= "1"
            android:drawableTop="@drawable/mode_car"
            android:drawablePadding="0dp"
           />
        <Button
            android:id="@+id/plane_button"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/mode_airplane"
            android:drawablePadding="0dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/gender_label"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Gender: "
        android:layout_below ="@id/button_row"
        />
    <SeekBar
	   android:layout_width="fill_parent"
	   android:layout_height="wrap_content"
	   android:layout_margin="10px"
	   android:paddingRight="10dp"
	   android:paddingLeft="10dp"
	   android:id="@+id/seekbar"
	   android:layout_below="@id/gender_label"
	   android:max="100"
	   />
    <TextView
        android:id="@+id/date_label"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Duration:"
        android:layout_below="@id/seekbar"
        />
        <TextView android:id="@+id/dash" 
        android:layout_below="@id/date_label"
		android:layout_width="wrap_content"
		android:layout_height="35dp" 
		android:layout_centerHorizontal="true" 
		android:layout_centerVertical="true"
		android:gravity="center_vertical"
		android:text="-"/>
    	    <EditText 
			    android:id="@+id/from_date" 
			    android:layout_width="100dp" 
			    android:layout_height="40dp"
			    android:imeOptions="actionDone"
			    android:inputType="text"
			    android:layout_below="@id/date_label"
			    android:layout_toLeftOf="@id/dash"
			    android:focusable="false"/>
	        <EditText 
			    android:id="@+id/to_date" 
			    android:layout_width="100dp" 
			    android:layout_height="40dp"
			    android:imeOptions="actionDone"
			    android:inputType="text"
			    android:layout_below="@id/date_label"
			    android:layout_toRightOf="@id/dash"
			    android:focusable="false"/>
         <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go back"
        android:layout_below="@id/dash"
        />
    
    <Button
        android:id="@+id/go_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Go"
        android:layout_below="@id/dash"
        android:layout_toRightOf="@id/back_button"
        />
</RelativeLayout>