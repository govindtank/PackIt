<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<!-- Action bar  -->
    <RelativeLayout
        	android:id="@+id/action_bar"
	        android:background="@drawable/action_bar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:maxHeight="50dp"
	        >
		    <ImageView
				android:id="@+id/logo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:src="@drawable/topbar_packitlogo"
				android:layout_alignParentLeft="true"
				android:layout_marginLeft="10dp"
				android:contentDescription="@string/app_name"
			/>
	        <ImageView
	            android:id="@+id/settings_button"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:src="@drawable/topbaricon_settings"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="6dp"
	            android:contentDescription="@string/settings"
	            />
	        <ImageView
	            android:id="@+id/packing_button"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:src="@drawable/topbaricon_packing"
	            android:layout_toLeftOf="@id/settings_button"
	            android:layout_marginRight="6dp"
	            android:contentDescription="@string/pack"
	            />
	        <ImageView
	            android:id="@+id/info_button"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:src="@drawable/topbaricon_info"
	            android:layout_toLeftOf="@id/packing_button"
	            android:layout_marginRight="6dp"
	            android:contentDescription="@string/packing_tips"
	            />
	         <ImageView
	            android:id="@+id/home_button"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:src="@drawable/topbaricon_home"
	            android:layout_toLeftOf="@id/info_button"
	            android:layout_marginRight="6dp"
	            android:contentDescription="@string/home"
	            />
	</RelativeLayout>
	<!-- Enter trip name -->
	  
	<!-- <RelativeLayout
	    android:id="@+id/trip_list"
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:padding="10dp"
	    >    
	</RelativeLayout> -->
	<RelativeLayout
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
	    android:layout_marginTop="15dp"
	    >
	    <EditText
           android:id="@+id/trip_name_field"
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           android:imeOptions="actionDone"
           android:inputType="text"
           android:hint="@string/hint"
           android:layout_marginLeft="5dp"
           android:layout_alignParentLeft="true"
           />
		<Button
	        android:id="@+id/continue_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="5dp"
	        android:drawableTop="@drawable/continue_button"
	        android:background="@null"
	        /> 
	       
	</RelativeLayout>
	 <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@color/transparent"
        android:drawSelectorOnTop="false" />
</LinearLayout>
